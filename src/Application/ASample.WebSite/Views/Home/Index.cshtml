    <!--首页Script-->
    <script type="text/javascript">
    //主页参数
    var homeIndexParam = {
        mainTabStrip: null
    };

    //主页方法
    homeIndexMethod = {
        //初始化尺寸
        initSize: function () {
        },

        //加载页面
        loadTab: function (url, title, tabId) {
            var successFn = function (data) {
                homeIndexParam.mainTabStrip.insertAfter([{ text: title, content: data, imageUrl: '/content/img/tab-icon.png' }], homeIndexParam.mainTabStrip.tabGroup.children().last());
                var newTab = homeIndexParam.mainTabStrip.tabGroup.children().last();
                //添加关闭按钮
                newTab.append('<span data-type="remove" onclick="homeIndexMethod.tabClose(this)"  class="k-link"><span class="k-icon k-i-x"></span></span>');
                newTab.append('<input id="hidden_' + tabId + '" type="hidden" />');
                //新添加tab活跃
                homeIndexParam.mainTabStrip.activateTab(newTab);
            };
            $.ajaxPost(url, {}, successFn, '加载中...');
        },

        //初始化tab
        initTab: function () {
            //初始化mainTab
            homeIndexParam.mainTabStrip = $("#mainContent").kendoTabStrip({
                animation: false,
                value: '主页',
                dataTextField: "text",
                dataContentUrlField: 'contentUrl',
                dataImageUrlField: 'imageUrl',
                dataSource: [{
                    text: '主页',
                    imageUrl: '/content/img/tab-icon.png',
                    contentUrl:'/IdentityUser/Index'
                }]
            }).data("kendoTabStrip");
            //mainContent没有border
            $('#mainContent').css('border', 'none');
            //设置tabContent不允许滚动
            $('#mainContent .k-content').css('overflow', 'hidden');
        },

        //菜单点击
        menuClick: function () {
            var oThis = $(this);
            var contentUrl = oThis.attr('targetHref');
            var tabId = oThis.attr('tabId');
            var text = oThis.html();
            if ($('#mainContent #hidden_' + tabId).length > 0) {
                var existTab = $('#mainContent #hidden_' + tabId).parent('li');
                homeIndexParam.mainTabStrip.activateTab(existTab);
                return false;
            }
            //不允许打开超过5个
            //if (homeIndexParam.mainTabStrip.items().length >= 5) {
            //    $.msgWarn('最多只能打开5个选项卡！');
            //    return false;
            //}

            homeIndexMethod.loadTab(contentUrl, text, tabId);
            return false;
        },

        //关闭tab
        tabClose: function (removeSpan) {
            var tabRemoveSpan = $(removeSpan).closest('li');
            homeIndexParam.mainTabStrip.remove(tabRemoveSpan);
            var lastTab = homeIndexParam.mainTabStrip.tabGroup.children().last();
            homeIndexParam.mainTabStrip.activateTab(lastTab);
        },

        //绑定事件
        bindEvent: function () {
            $('#side-menu .target-a').click(homeIndexMethod.menuClick);
        }
    };

    $(function () {
        homeIndexMethod.initTab();
        homeIndexMethod.initSize();
        homeIndexMethod.bindEvent();
    });
    </script>
